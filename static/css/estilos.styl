@import "nib"
@import "slider.styl"
@import "fonts.styl"

.u-title
  border-bottom 2px dashed #00CCFF
  color #00CCFF
  font-weight normal
  font-size 1.5em
  padding-bottom .5em
  text-align center

.u-containerDefault
  max-width 800px
  margin 0 auto

.MainMenu
  background #1E1E1E
  text-align center
  height 3.75em
  position fixed
  left 0
  right 0
  top 0
  z-index 3

.MainMenu-list
  margin 0
  padding 0

.MainMenu-item
  display inline-block

.MainMenu-link
  color #00DBFF
  text-decoration none
  line-height 3.75em
  margin-right 1.5em

.Header
  margin-top 3.75em
  background-image url('../images/portada.jpg')
  background-repeat no-repeat
  background-position center
  background-size cover
  text-align center
  padding 1.2em 0
  &-button
    background white
    border none
    border-radius 50%
    height 40px
    line-height 40px
    position fixed
    right 1em
    top 1em
    width 40px
    z-index 3
    outline 0
    display none
    &.is-active
      display block
.Header-imageContainer
  margin 0

.Header-image
  border 5px solid white
  border-radius 50%

.Header-name,
.Header-link
  color white

.Header-link
  font-size 2.2em
  font-weight bold
  text-decoration none

.Header-name
  font-size 1.5em
  font-weight 300
  margin 0

.Profile
  text-align center
  padding 0 1em

.Profile-link
  background orange
  border-radius 2em
  color white
  margin-right .5em
  padding .5em 1em
  text-decoration none
  display inline-block
  margin-bottom 1em
  &.twitter
    background #55ACEE
  &.facebook
    background #4862A3 
  &.github
    background #829AA8
  &:before
    margin-right .5em

.Work
  margin-top 2em
  text-align center
  &-container
    display flex
    flex-wrap wrap
    justify-content space-around

.Work-item
  display inline-block
  margin-bottom 1.8em

.Work-imageContainer
  margin 0

.Work-description
  font-size 1.1em
  color #515151
  font-style italic

.Footer
  background-color #0EC3DE
  background-repeat no-repeat
  background-position center
  image('../images/footer-mejorandola.jpg', w=1024px, h=343px)
  padding 2em 0
  text-align center

.Footer-form
  text-align center
  display inline-block

.Footer-left
  display inline-block
  max-width 32em
  text-align center
  vertical-align top

.Footer-title
  color white

.Footer-formInput,
.Footer-textarea
  background white
  border none
  display block
  border-radius 2em
  padding .5em
  margin 0 auto 1em
  outline 0

.Footer-textarea
  resize none

.Footer-button
  background orange
  border-radius 1em
  border none
  color white
  padding .5em 1em

.Slider
  background black
  &-container
    max-width 1024px
    margin 0 auto

@media screen and (max-width: 480px)
  .Profile
    &-link
        display block
        

@media screen and (max-width: 767px)
  .Footer
    &-form
      display block
    &-formInput
    &-textarea
      width 90%
      box-sizing border-box
  .Header
    margin-top 0
  .MainMenu
    height auto
    left -200px
    width 200px
    transition .3s
    &.is-active
      left 0
    &-item
      display block
